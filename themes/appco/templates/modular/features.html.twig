<!-- Best Features Start -->
        <section class="best-features-area section-padd4">
            <div class="container">
                <div class="row justify-content-end">
                    <div class="col-xl-8 col-lg-10">
                        <!-- Section Tittle -->
                        {% if( page.title is not empty ) %}
                        <div class="row">
                            <div class="col-lg-10 col-md-10">
                                <div class="section-tittle">
                                    <h2>{{ page.title }}</h2>
                                    <p>{{ content|raw }}</p>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                        <!-- Section caption -->
                        <div class="row">
                        {% for feature in page.header.features %}
                            <div class="col-xl-6 col-lg-6 col-md-6">
                                <div class="single-features mb-70">
                                    {% if(feature.icon is not empty) %}<div class="features-icon"><span class="{{ feature.icon }}"></span></div>{% endif %}
                                    {% if(feature.title or feature.content is not empty) %}
                                    <div class="features-caption">
                                        {% if(feature.title is not empty) %}<h3>{{ feature.title }}</h3>{% endif %}
                                        {% if(feature.content is not empty) %}<p>{{ feature.content }}</p>{% endif %}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <!-- Shpe -->
            <div class="features-shpae d-none d-lg-block">
            {% if page.media.images %}
                {% set thumbUrl = page.media.images|first.url %}
                <img src="{{ thumbUrl }}" alt="{{ page.title }}" />
            {% endif %}
            </div>
        </section>
        <!-- Best Features End -->